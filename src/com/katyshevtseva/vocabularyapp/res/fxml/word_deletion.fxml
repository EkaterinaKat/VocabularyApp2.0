<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet /css/style?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.katyshevtseva.vocabularyapp.controller.WordDeletionController"
            prefHeight="400.0" prefWidth="600.0">

    <stylesheets>
        <URL value="@/com/katyshevtseva/vocabularyapp/res/css/style.css"/>
    </stylesheets>

    <top>
        <Pane prefHeight="14"/>
    </top>

    <center>
        <HBox alignment="CENTER">
            <ImageView fx:id="imageView" fitWidth="50" fitHeight="50"/>
            <Pane prefWidth="10"/>
            <Label text="Are you sure you want to delete the word?"/>
        </HBox>
    </center>

    <bottom>
        <AnchorPane>
            <HBox AnchorPane.rightAnchor="120" AnchorPane.leftAnchor="120">
                <Button text="Yes" onMouseClicked="#deleteButtonListener">
                    <HBox.margin>
                        <Insets bottom="25" left="20" right="20" top="20"/>
                    </HBox.margin>
                </Button>
                <Button text="No" onMouseClicked="#cancelButtonListener">
                    <HBox.margin>
                        <Insets bottom="25" left="20" right="20" top="20"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </AnchorPane>
    </bottom>

</BorderPane>










