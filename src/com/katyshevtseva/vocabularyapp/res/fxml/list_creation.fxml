<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet /css/style?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.katyshevtseva.vocabularyapp.controller.WordListCreator">

    <stylesheets>
        <URL value="@/com/katyshevtseva/vocabularyapp/res/css/style.css"/>
    </stylesheets>

    <HBox AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Label text="Enter list name: "/>
        <TextField fx:id="nameInputField" onAction="#okButtonListener" HBox.hgrow="ALWAYS"/>
    </HBox>


    <Button fx:id="okButton" text="OK" onMouseClicked="#okButtonListener" AnchorPane.rightAnchor="10"
            AnchorPane.bottomAnchor="10"/>
</AnchorPane>
